#!/bin/bash

if [ "$1" == "-help" ];then
  echo 'Aziz, Light! Usage: aziz (high,low,mid,max,min)'

elif [ "$1" == "max" ];then
  xbacklight = 100%

elif [ "$1" == "min" ];then
  xbacklight = 20

elif [ "$1" == "high" ];then
  xbacklight = 80

elif [ "$1" == "mid" ];then
  xbacklight = 50

elif [ "$1" == "low" ];then
  xbacklight = 30

else
  exit 0;
fi
